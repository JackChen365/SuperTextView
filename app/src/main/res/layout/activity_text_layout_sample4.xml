<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.cz.widget.supertextview.library.view.TextLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        android:gravity="right"
        android:layout_margin="4dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/flowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="flow"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/paragraphButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="paragraph"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/paragraphLineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="paragraphLine"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/breakLineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="breakLine"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/considerBreakLineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="considerBreakLine"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singleLineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="singleLine"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="false"
            android:text="clear"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
